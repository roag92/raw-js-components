{
  "name": "raw-js-components",
  "version": "1.0.0",
  "description": "A practical example of components",
  "scripts": {
    "format:fix": "prettier --config ./.pretierrc --write \"{src/**/*.js,tests/**/*.js,public/index.html,styles/**/*.scss}\"",
    "start": "yarn gulp",
    "test": "yarn karma start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js|html,scss}": [
      "yarn run format:fix",
      "git add"
    ]
  },
  "keywords": [
    "js",
    "javascript",
    "components",
    "es5"
  ],
  "author": "Ricardo Roman",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "del": "^3.0.0",
    "dotenv": "^8.2.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^6.0.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-concat": "^2.6.1",
    "gulp-replace": "^1.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-uglify": "^3.0.1",
    "husky": "^1.1.4",
    "jasmine": "^3.3.0",
    "jshint": "^2.9.6",
    "karma": "^3.1.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-jasmine": "^2.0.1",
    "karma-sinon": "^1.0.5",
    "lint-staged": "^8.0.5",
    "prettier": "^1.15.2",
    "sinon": "^7.1.1"
  }
}
